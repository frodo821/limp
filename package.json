{
  "name": "limp",
  "version": "1.0.0",
  "description": "lightweight extensible document markup language",
  "main": "dist/main.js",
  "scripts": {
    "test": "npm run build-internal -- --platform=node && mocha",
    "build": "npm run build-internal -- --platform=browser",
    "build-internal": "tsc --noEmit && esbuild --outfile=dist/main.js --bundle --minify src/index.ts",
    "build-docs": "npm run build-internal -- --platform=node && node ./tools/build-documents.js"
  },
  "keywords": [
    "documentation",
    "markup"
  ],
  "author": "frodo821",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.6",
    "esbuild": "^0.14.21",
    "mocha": "^9.2.0",
    "typescript": "^4.5.5"
  },
  "bin": "cli.js"
}